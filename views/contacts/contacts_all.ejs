<% layout('layout2') %>



<div id="wrapper">

    <% include ../partials/sidebar %>

    <div id="page-content-wrapper">
        <% include ../partials/navbar %>
        <div class="container-fluid main_body">
			<div class="ul_links">
	            <ul>
	                <li><a href="/home">Home</a></li> |
	                <li><a href="/contacts_all">All Contacts</a></li>
	            </ul>
	        </div>

            <div class="bodyDiv">
				<h4 style="">Contacts</h4>

        <% for (var i = 0; i < data.length; i++ ) { %>
          <div class="row">
            <div class="col-xs-12 col-md-6 col-lg-4 companyListDiv">
                <div class="row">
                    <div class="col-xs-4">
                        <img src="/uploads/<%= data[i].image %>" class="img-responsive" style="margin-top: 10px">
                    </div>
                    <div class="col-xs-8">
                        <div class="companyListItemInfo">
                            <h5 class=""><%= data[i].name %></h5>
                            <span class="">
                              <i class="star"></i>
                              <%= data[i].phone_no %>
                            </span>
                            <br>
                            <i class="fa fa-building-o "></i>
                            <%= data[i].sector %>
                            <br>
                            <i class="fa fa-map-marker "></i>
                            <%= data[i].city %>,
                            <%= data[i].country %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      <% } %>
            </div>

        </div>
    </div>

</div>
