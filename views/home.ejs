<% layout('layout2') %>

<div id="wrapper">

<% include partials/sidebar %>

    <div id="page-content-wrapper">

      <% include partials/navbar %>

        <div class="container-fluid main_body">
          <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
            <h1>Hello <%= user.username %>!</h1>
              <p>What would you like to do today ?</p>
              <% if (hasErrors) {%>
                  <div class="alert alert-success">
                     <a href="#" class="close" data-dismiss="alert" aria-label="close">
                         &times;
                     </a>
                     <%= blocked %>
                  </div>
              <% } %>
            <div class="row">
              <div class="col-md-4" id="colDesc">
                  <div class="info-icon"><i class="fa fa-sign-in"></i></div>
                  <h3 class="text-center">Add Contacts</h3>
                  <p class="text-center">Add a new contact in the network</p>

                  <a href="/contact/create" class="btn btn-block btn-primary link_btn">Add</a>
              </div>

              <div class="col-md-4" id="colDesc">
                  <div class="info-icon"><i class="fa fa-search"></i></div>
                  <h3 class="text-center">Search Contact</h3>
                  <p class="text-center">Search a specified contact. Walkthrough!</p>

                  <a href="/contact/search" class="btn btn-block btn-primary link_btn">Search</a>
              </div>
              <div class="col-md-4" id="colDesc">
                  <div class="info-icon"><i class="fa fa-star"></i></div>
                  <h3 class="text-center">View All</h3>
                  <p class="text-center">View all contacts that are available</p>

                  <a href="/contacts_all" class="btn btn-block btn-primary link_btn">View</a>
              </div>

	          </div>
	        </div>

        </div>
    </div>
